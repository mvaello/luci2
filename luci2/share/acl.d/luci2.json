		"read": {
			"ubus": {
				"luci2.system": [
					"sshkeys_get"
				]
			},
			"uci": [
				"dropbear"
			]
		},
		"write": {
			"ubus": {
				"luci2.system": [
					"sshkeys_set",
					"password_set"
				]
			},
			"uci": [
				"dropbear"
			]
		}
	},

	"users": {
		"description": "Guest login settings",
		"read": {
			"uci": [
				"rpcd"
			]
		},
		"write": {
			"uci": [
				"rpcd"
			]
		}

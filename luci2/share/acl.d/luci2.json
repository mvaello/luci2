			"ubus": {
				"luci2.ui": [
					"themes"
				]
			}
		}
	},

	"core": {
		"description": "Core functions for LuCI",
		"read": {
			"ubus": {
				"luci2.ui": [
					"*"
				],
				"session": [
					"access",
					"destroy"
				],
				"uci": [
					"*"
				]
			}
		}
	},


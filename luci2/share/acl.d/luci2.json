					"status"
				],
				"luci2.network": [
					"conntrack_count",
					"dhcp_leases",
					"dhcp6_leases",
					"arp_table",
					"routes",
					"routes6"
				],
				"luci2.system": [
					"diskfree",
					"syslog",
					"dmesg",
					"process_list"
				]
			}
		},
		"write": {
			"ubus": {
				"luci2.system": [
					"process_signal"
				]
			}
		}
	},

	"system": {
		"description": "General system settings",
